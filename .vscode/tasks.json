{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Claude CLI",
      "type": "shell",
      "command": "while [ ! -f $HOME/.claude.json ]; do sleep 1; done && $HOME/.claude/local/node_modules/.bin/claude",
      "args": [],
      "isBackground": false,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}